{
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0"
  },
  "lint-staged": {
    "**/*.journal": [
      "pnpm run hledger:format:check",
      "pnpm run hledger:check"
    ]
  },
  "name": "ledger",
  "private": true,
  "scripts": {
    "hledger:check": "python -m scripts.check",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "hledger:format": "python -m scripts.format",
    "hledger:format:check": "python -m scripts.format --check",
    "hledger:install": "curl -sL https://github.com/simonmichael/hledger/releases/latest/download/hledger-linux-x64.tar.gz | sudo tar -xzv -f- -C /usr/local/bin hledger",
    "markdownlint": "markdownlint-cli2 \"**/*.md\"",
    "markdownlint:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "postinstall": "python -m pip install -r requirements.txt || true",
    "prepare": "husky"
  },
  "type": "module"
}