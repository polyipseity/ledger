{
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1",
    "pyright": "^1.1.408"
  },
  "name": "ledger",
  "packageManager": "pnpm@10.28.1",
  "private": true,
  "scripts": {
    "build": "pnpm run check && pnpm run build:force",
    "build:force": "node -e \"console.log('No build step')\"",
    "check": "pnpm run check:journal && pnpm run check:md && pnpm run check:prettier && pnpm run check:py",
    "check:journal": "uv run --locked -m scripts.format --check && uv run --locked -m scripts.check",
    "check:md": "markdownlint-cli2",
    "check:prettier": "prettier --cache --check \"**/*.{astro,cjs,css,csv,gql,graphql,hbs,html,js,jsx,json,json5,jsonc,jsonl,less,mjs,pcss,sass,scss,svelte,styl,ts,tsx,vue,xml,yaml,yml}\"",
    "check:py": "pyright && uv run --locked ruff check && uv run --locked ruff format --check",
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "format": "pnpm run format:journal && pnpm run format:md && pnpm run format:prettier && pnpm run format:py",
    "format:journal": "uv run --locked -m scripts.format",
    "format:md": "markdownlint-cli2 --fix",
    "format:prettier": "prettier --cache --write \"**/*.{astro,cjs,css,csv,gql,graphql,hbs,html,js,jsx,json,json5,jsonc,jsonl,less,mjs,pcss,sass,scss,svelte,styl,ts,tsx,vue,xml,yaml,yml}\"",
    "format:py": "pyright && uv run --locked ruff check --fix && uv run --locked ruff format",
    "hledger:install": "curl -sL https://github.com/simonmichael/hledger/releases/latest/download/hledger-linux-x64.tar.gz | sudo tar -xzv -f- -C /usr/local/bin hledger",
    "prepare": "uv sync --all-extras --dev && husky",
    "test": "pnpm run test:py",
    "test:py": "uv run --locked pytest"
  },
  "type": "module"
}
