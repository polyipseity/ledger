{
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1"
  },
  "name": "ledger",
  "packageManager": "pnpm@10.28.1",
  "private": true,
  "scripts": {
    "commitlint": "commitlint --from=origin/main --to=HEAD",
    "format": "pnpm -s format:js && pnpm -s format:py && pnpm -s format:journal",
    "format:check": "pnpm -s prettier --check \"**/*.{json,yml,yaml,css,scss,html,js,ts,tsx,jsx}\" && python -m ruff check . && pnpm -s hledger:format:check",
    "format:journal": "pnpm run hledger:format",
    "format:js": "prettier --write \"**/*.{json,yml,yaml,css,scss,html,js,ts,tsx,jsx}\"",
    "format:py": "python -m ruff --fix . || node -e \"\" && python -m isort . || node -e \"\" && python -m black . || node -e \"\"",
    "hledger:check": "python -m scripts.check",
    "hledger:format": "python -m scripts.format",
    "hledger:format:check": "python -m scripts.format --check",
    "hledger:install": "curl -sL https://github.com/simonmichael/hledger/releases/latest/download/hledger-linux-x64.tar.gz | sudo tar -xzv -f- -C /usr/local/bin hledger",
    "markdownlint": "markdownlint-cli2",
    "markdownlint:fix": "markdownlint-cli2 --fix",
    "postinstall": "python -m pip install -e . --group dev",
    "prepare": "husky"
  },
  "type": "module"
}
